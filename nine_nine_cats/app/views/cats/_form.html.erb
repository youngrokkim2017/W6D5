<% if type == :new %>
  <% action_url = cats_url %>
  <% button_text = "Create Cat" %>
<%elsif type == :edit %>
  <% action_url = cat_url(cat) %>
  <% button_text = "Update Cat" %>
<% end %>

<form action="<%= action_url %>" method= "post">
  <% if type == :edit %>
    <input type="hidden" name="_method" value="patch">
  <% end %>

  <p>
    <label for="name">Name:
      <input type="text" id="name" name="cat[name]" value="<%= cat.name %>">
    </label>
  </p>

  <p>
    <label for="sex">Sex:
      <br>
      <input type="radio" id="sex" name="cat[sex]" value="M">Male<br>
      <input type="radio" id="sex" name="cat[sex]" value="F">Female<br>
    </label>
  </p>

  <p>
    <label for="color">Color:
      <select name="cat[color]" id="color">
        <option disabled selected>--select a color--</option>
        <option value="Black">Black</option>
        <option value="White">White</option>
        <option value="Blue">Blue</option>
        <option value="Multi">Multi</option>
      </select>
    </label>
  </p>

  <p>
    <label for="birth_date">Birth Date:
      <input type="date" name="cat[birth_date]" id="birth_date" value="<%= cat.birth_date %>">
    </label>
  </p>

   <p>
    <label for="description">Description:
      <input type="textarea" name="cat[description]" id="description" value="<%= cat.description %>">
    </label>
  </p>

  <p>
    <input type="submit" value="<%= button_text %>">
  </p>

</form>